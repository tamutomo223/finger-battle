%header
  .logo
    = link_to root_path do
      %img{src:"/ロゴ透過なし.png", alt: "logo"}
  .my-name
    - if user_signed_in?
      = current_user.name    
  .logout
    = link_to "ログアウト", destroy_user_session_path, method: :delete
.group-title
  ルーム作成ページ

.group-form
  = form_for [@group] do |f|
    .form-kijun
      = f.text_field :name ,class:"group-id",placeholder:"ルーム名"
      %input{name: "group[user_ids][]", type: "hidden", value: current_user.id, class: "hidden"}
      = f.submit "ルームを作る",class:"group-btn"