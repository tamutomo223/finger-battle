.wrapper
  .title
    %img{:alt => "ロゴ", :src => "/ロゴ.png"}/
  
  .button
    = link_to "グループを作る", "groups/new" 
  
  %h2 募集ルーム一覧
  .group-list
    %ul.groups    
      - @groups.first(5).each do |group|
        %li.group
          =link_to group_path(group), class: "group" do
            .group-name
              .group-name-name
                = "【#{group.name}】"
              .group-host
                = "オーナー名: #{group.users[0].name}"
          

  